<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="650" prefWidth="863.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vista.GestionDePedidosControlador">

    <top>
        <HBox alignment="CENTER_RIGHT" spacing="15" style="-fx-background-color: #2c3e50; -fx-padding: 10;">
            <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Admin" textFill="white" />
            <Button fx:id="btnVolver" onAction="#volverMenu" style="-fx-background-color: #EFB000; -fx-text-fill: black; -fx-font-weight: bold;" text="⬅ Volver" />
            <Button fx:id="btnCerrar" onAction="#CerrarSesion" style="-fx-background-color: #EFB000; -fx-text-fill: black; -fx-font-weight: bold;" text="Cerrar Sesión" />
        </HBox>
    </top>

    <center>
        <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #D6D6D6;">
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="btnAnadir" onAction="#anadirPedido" style="-fx-background-color: #4F6078; -fx-text-fill: white;" text="Añadir Pedido" />
                <Button fx:id="btnEditar" onAction="#editarPedido" style="-fx-background-color: #4F6078; -fx-text-fill: white;" text="Editar Pedido" />
                <Button fx:id="btnQuitar" onAction="#quitarPedido" style="-fx-background-color: #4F6078; -fx-text-fill: white;" text="Quitar Pedido" />
            </HBox>

            <GridPane hgap="10" vgap="10">
                <children>

                    <Label text="Estado:" />
                    <TextField fx:id="txtEstado" GridPane.columnIndex="1" />

                    <Label text="Fecha Compra(y-m-d):" GridPane.rowIndex="1" />
                    <TextField fx:id="txtFechaCompra" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label text="Fecha Llegada(y-m-d):" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                    <TextField fx:id="txtFechaLlegada" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                    <Label text="ID Película:" GridPane.rowIndex="2" />
                    <TextField fx:id="txtPelicula" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <Label text="Dirección:" GridPane.columnIndex="2" />
                    <TextField fx:id="txtDireccion" GridPane.columnIndex="3" />

                </children>
            <columnConstraints>
               <ColumnConstraints />
               <ColumnConstraints />
               <ColumnConstraints />
               <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
            </GridPane>

            <TableView fx:id="tablaPedidos" prefHeight="350" prefWidth="839.0">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="100" text="ID Pedido" />
                    <TableColumn fx:id="colEstado" prefWidth="120" text="Estado" />
                    <TableColumn fx:id="colFechaCompra" prefWidth="150" text="Fecha Compra" />
                    <TableColumn fx:id="colFechaLlegada" prefWidth="150" text="Fecha Llegada" />
                    <TableColumn fx:id="colIdPelicula" prefWidth="100" text="ID Película" />
                    <TableColumn fx:id="colDireccion" prefWidth="200" text="Dirección" />
                </columns>
            </TableView>

        </VBox>
    </center>
</BorderPane>
