<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>

<AnchorPane fx:id="root" prefHeight="312.0" prefWidth="213.0"
            styleClass="compra-card" stylesheets="@../css/compra.css"
            xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="vista.CompraControlador">

    <StackPane layoutY="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <ImageView fx:id="imagenPelicula" fitHeight="144.0" fitWidth="203.0"
                   onMouseClicked="#verDetalles" pickOnBounds="true" preserveRatio="true"
                   styleClass="image-container" />
    </StackPane>

    <Label fx:id="tituloLabel" layoutX="8.0" layoutY="170.0"
           styleClass="card-titulo" text="Pulp Fiction" />

    <Label fx:id="compraIdLabel" layoutX="8.0" layoutY="154.0"
           styleClass="card-subtitulo" text="Compra #..." />

    <Label fx:id="cantidadLabel" layoutX="32.0" layoutY="230.0"
           styleClass="card-texto" text="Cantidad:           1 unidad" />

    <Label fx:id="proveedorLabel" layoutX="32.0" layoutY="245.0"
           styleClass="card-texto" text="Proveedor:         General" />

    <Label fx:id="fechaCompraLabel" layoutX="31.0" layoutY="262.0"
           styleClass="card-texto" text="Compra:             --/--/--" />

    <Label fx:id="fechaEsperadaLabel" layoutX="32.0" layoutY="278.0"
           styleClass="card-texto" text="Entrega Esperada:   --/--/--" />

    <Label fx:id="estadoLabel" layoutX="32.0" layoutY="293.0"
           styleClass="card-estado" text="Estado:               Pendiente" />

    <Button fx:id="btnRemove" layoutX="115.0" layoutY="198.0"
            prefHeight="25.0" prefWidth="90.0"
            styleClass="btn-base, btn-cancelar" text="Cancelar" />

    <Button fx:id="btnConfirmar" layoutX="8.0" layoutY="198.0"
            onAction="#confirmarCompra"
            prefHeight="25.0" prefWidth="90.0"
            styleClass="btn-base, btn-confirmar" text="Confirmar" />

</AnchorPane>