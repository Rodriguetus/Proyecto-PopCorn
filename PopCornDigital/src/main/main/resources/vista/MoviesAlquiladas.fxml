<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="movieCard" prefWidth="250" spacing="10"
      style="-fx-background-color: #f4f4f4; -fx-padding: 15; -fx-border-radius: 10;
      -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);"
      xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="vista.MovieAlquileresControlador">

    <!-- Imagen de la película -->
    <ImageView fx:id="posterImage" fitHeight="320" fitWidth="220" preserveRatio="true"
               style="-fx-background-color: #ddd; -fx-border-radius: 8;" />

    <!-- Título -->
    <Label fx:id="nombreLabel" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

    <!-- Precio y stock -->
    <HBox spacing="10">
        <Label fx:id="precioLabel" style="-fx-font-size: 14px; -fx-text-fill: #27ae60;" />
        <Label fx:id="stockLabel" style="-fx-font-size: 14px; -fx-text-fill: #e74c3c;" />
    </HBox>

    <!-- Año de salida -->
    <Label fx:id="anoLabel" style="-fx-font-size: 13px; -fx-text-fill: #7f8c8d;" />

    <!-- Formato y proveedor -->
    <HBox spacing="10">
        <Label fx:id="formatoLabel" style="-fx-font-size: 13px; -fx-text-fill: #34495e;" />
        <Label fx:id="proveedorLabel" style="-fx-font-size: 13px; -fx-text-fill: #34495e;" />
    </HBox>

    <!-- Género -->
    <Label fx:id="generoLabel" style="-fx-font-size: 13px; -fx-text-fill: #8e44ad;" />

    <!-- Descripción -->
    <Label fx:id="descripcionLabel" style="-fx-font-size: 12px; -fx-text-fill: #2c3e50;" wrapText="true" />

    <!-- Fechas de alquiler -->
    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Label fx:id="Falquilar" style="-fx-font-size: 12px; -fx-text-fill: #2980b9;" text="Alquilado: --/--/----" />
        <Label fx:id="Fcaduca" style="-fx-font-size: 12px; -fx-text-fill: #c0392b;" text="Caduca: --/--/----" />
    </HBox>

</VBox>
