<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="700.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="vista.RegistrarCuentaControlador">

    <children>

        <AnchorPane layoutX="1" prefHeight="200" prefWidth="700" style="-fx-background-color: C2C2C4;">
            <children>
                <Circle fill="DODGERBLUE" layoutX="358" layoutY="76" radius="50"/>
                <ImageView fitHeight="70" fitWidth="70" layoutX="328" layoutY="41">
                    <image>
                        <Image url="@../Imagenes/PopCorn.png"/>
                    </image>
                </ImageView>

                <Label layoutX="315" layoutY="140" text="Crear Cuenta">
                    <font><Font size="18"/></font>
                </Label>

                <Label layoutX="261" layoutY="174" text="Regístrate para empezar">
                    <font><Font size="15"/></font>
                </Label>
            </children>
        </AnchorPane>

        <Label layoutX="210" layoutY="257" text="Nombre de Usuario"/>
        <TextField fx:id="nombreusuarioTextField" layoutX="206" layoutY="275"
                   prefWidth="306" prefHeight="26" promptText="Nombre Usuario"/>

        <Label layoutX="207" layoutY="319" text="Correo Electrónico"/>
        <TextField fx:id="correoTextField" layoutX="206" layoutY="338"
                   prefWidth="306" prefHeight="26" promptText="Correo Electrónico"/>

        <Label layoutX="206" layoutY="381" text="Contraseña"/>
        <PasswordField fx:id="contrasenaPasswordField" layoutX="206" layoutY="399"
                       prefWidth="306" prefHeight="26" promptText="Contraseña"/>

        <Label layoutX="205" layoutY="441" text="Repetir Contraseña"/>
        <PasswordField fx:id="repetirContrasenaPasswordField" layoutX="205" layoutY="459"
                       prefWidth="306" prefHeight="26" promptText="Repetir Contraseña"/>

        <Label fx:id="errorLabel" layoutX="260" layoutY="485" textFill="red"/>

        <Button layoutX="315" layoutY="520" prefWidth="120" text="Crear Cuenta"
                onAction="#registrarCuenta"/>

        <Label layoutX="258" layoutY="565" text="¿Ya tienes cuenta?"/>
        <Hyperlink fx:id="linkInicio" layoutX="380" layoutY="562" text="Inicia sesión aquí"/>

    </children>
</AnchorPane>
