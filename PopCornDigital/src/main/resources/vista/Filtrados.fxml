<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="350" prefWidth="450" styleClass="root-pane" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vista.FiltradosController">

    <center>
        <VBox fx:id="contenedorFiltros" alignment="TOP_CENTER" spacing="15" styleClass="filters-vbox" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <Label styleClass="header-label" text="⚙️ Opciones de Filtro" />

            <MenuButton fx:id="btnFormatos" maxWidth="Infinity" styleClass="filter-menu-button" text="Formatos" />
            <MenuButton fx:id="btnProveedor" maxWidth="Infinity" styleClass="filter-menu-button" text="Proveedor" />
            <MenuButton fx:id="btnGenero" maxWidth="Infinity" styleClass="filter-menu-button" text="Género" />
            <MenuButton fx:id="btnAnio" maxWidth="Infinity" styleClass="filter-menu-button" text="Año" />
        </VBox>
    </center>

    <bottom>
        <HBox alignment="BOTTOM_RIGHT" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="15" left="15" right="15" top="15" />
            </padding>
            <Button fx:id="btnFiltrar" mnemonicParsing="false" styleClass="primary-button" text="Filtrar" />
        </HBox>
    </bottom>
</BorderPane>