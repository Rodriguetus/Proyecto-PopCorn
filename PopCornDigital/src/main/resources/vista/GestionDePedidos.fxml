<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="650" prefWidth="863.0"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="vista.GestionDePedidosControlador">

    <top>
        <HBox alignment="CENTER_RIGHT" spacing="15"
              style="-fx-background-color: #2c3e50; -fx-padding: 10;">
            <Label style="-fx-font-size: 16; -fx-font-weight: bold;"
                   text="Admin" textFill="white" />
            <Button fx:id="btnVolver" onAction="#volverMenu"
                    style="-fx-background-color: #EFB000; -fx-text-fill: black; -fx-font-weight: bold;"
                    text="⬅ Volver" />
            <Button fx:id="btnCerrar" onAction="#CerrarSesion"
                    style="-fx-background-color: #EFB000; -fx-text-fill: black; -fx-font-weight: bold;"
                    text="Cerrar Sesión" />
        </HBox>
    </top>

    <center>
        <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #D6D6D6;">
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="btnAnadir" onAction="#anadirPedido"
                        style="-fx-background-color: #4F6078; -fx-text-fill: white;"
                        text="Añadir Pedido" />
                <Button fx:id="btnEditar" onAction="#editarPedido"
                        style="-fx-background-color: #4F6078; -fx-text-fill: white;"
                        text="Editar Pedido" />
                <Button fx:id="btnQuitar" onAction="#quitarPedido"
                        style="-fx-background-color: #4F6078; -fx-text-fill: white;"
                        text="Quitar Pedido" />
            </HBox>

            <GridPane hgap="10" vgap="10">
                <children>

                    <Label text="ID Pedido:"/>
                    <TextField fx:id="txtId" GridPane.columnIndex="1"/>

                    <Label text="Estado:" GridPane.columnIndex="2"/>
                    <TextField fx:id="txtEstado" GridPane.columnIndex="3"/>

                    <Label text="Fecha Compra:" GridPane.rowIndex="1"/>
                    <TextField fx:id="txtFechaCompra" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                    <Label text="Fecha Llegada:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                    <TextField fx:id="txtFechaLlegada" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

                    <Label text="ID Película:" GridPane.rowIndex="2"/>
                    <TextField fx:id="txtPelicula" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                    <Label text="Dirección:" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                    <TextField fx:id="txtDireccion" GridPane.columnIndex="3" GridPane.rowIndex="2"/>

                </children>
            </GridPane>

            <TableView fx:id="tablaPedidos" prefHeight="350" prefWidth="839.0">
                <columns>
                    <TableColumn fx:id="colId" text="ID Pedido" prefWidth="100" />
                    <TableColumn fx:id="colEstado" text="Estado" prefWidth="120" />
                    <TableColumn fx:id="colFechaCompra" text="Fecha Compra" prefWidth="150" />
                    <TableColumn fx:id="colFechaLlegada" text="Fecha Llegada" prefWidth="150" />
                    <TableColumn fx:id="colIdPelicula" text="ID Película" prefWidth="100" />
                    <TableColumn fx:id="colDireccion" text="Dirección" prefWidth="200" />
                </columns>
            </TableView>

        </VBox>
    </center>
</BorderPane>

