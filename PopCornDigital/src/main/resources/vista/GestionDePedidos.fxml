<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="537.0" prefWidth="863.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vista.GestionDePedidosControlador">

    <top>
        <HBox alignment="CENTER_RIGHT" spacing="15" style="-fx-background-color: #2c3e50; -fx-padding: 10;">
            <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Pestaña De Administrador" textFill="white" />
            <Button fx:id="btnVolver" onAction="#volverMenu" style="-fx-background-color: #EFB000; -fx-text-fill: black; -fx-font-weight: bold;" text="Administrar Peliculas" />
            <Button fx:id="btnCerrar" onAction="#CerrarSesion" style="-fx-background-color: #EFB000; -fx-text-fill: black; -fx-font-weight: bold;" text="Cerrar Sesión" />
        </HBox>
    </top>

    <center>
        <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #D6D6D6;">

            <GridPane hgap="10" vgap="10">

                <Label text="Estado:" GridPane.columnIndex="0" />
                <ComboBox fx:id="cmbEstado" prefHeight="25.0" prefWidth="176.0" promptText="Pendiente, pagado" GridPane.columnIndex="1" />

                <Button fx:id="btnEditar" onAction="#editarPedido" prefWidth="107.0" style="-fx-background-color: #4F6078; -fx-text-fill: white;" text="Editar Pedido" GridPane.columnIndex="3" />

                <columnConstraints>
                    <ColumnConstraints prefWidth="50.0" />
                    <ColumnConstraints maxWidth="177.99998474121094" minWidth="119.0" prefWidth="148.0" />
                    <ColumnConstraints maxWidth="454.33333333333326" minWidth="395.3333485921223" prefWidth="425.33333333333326" />
                    <ColumnConstraints prefWidth="170.0" />
                </columnConstraints>

                <rowConstraints>
                    <RowConstraints />
                </rowConstraints>

            </GridPane>

            <TableView fx:id="tablaPedidos" prefHeight="350">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="100" text="ID Pedido" />
                    <TableColumn fx:id="colEstado" prefWidth="120" text="Estado" />
                    <TableColumn fx:id="colFechaCompra" prefWidth="150" text="Fecha Compra" />
                    <TableColumn fx:id="colFechaLlegada" prefWidth="150" text="Fecha Llegada" />
                    <TableColumn fx:id="colIdPelicula" prefWidth="100" text="ID Película" />
                    <TableColumn fx:id="colDireccion" prefWidth="200" text="Dirección" />
                </columns>
            </TableView>

        </VBox>
    </center>

</BorderPane>
