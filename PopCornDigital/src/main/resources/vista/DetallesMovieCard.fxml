<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="vista.DetallesMovieCardControlador"
            prefWidth="650" prefHeight="420"
            style="-fx-background-color: #2c2c2c; -fx-background-radius: 15; -fx-padding: 20;">

    <!-- Contenedor principal -->
    <VBox layoutX="20" layoutY="20" spacing="12" prefWidth="380">
        <!-- Label de título -->
        <Label fx:id="titleLabel"
               text="INFORMACION TITULO"
               style="-fx-text-fill: white; -fx-font-size: 26px; -fx-font-weight: bold;" />

        <!-- Label de descripción -->
        <Label fx:id="descriptionLabel"
               text="INFORMACION"
               wrapText="true"
               style="-fx-text-fill: #dddddd; -fx-font-size: 16px;" />

        <!-- Año de salida -->
        <HBox spacing="10">
            <Label text="Año:" style="-fx-text-fill: #bbbbbb; -fx-font-size: 14px;" />
            <Label fx:id="yearLabel" text="INFO" style="-fx-text-fill: white; -fx-font-size: 14px;" />
        </HBox>

        <!-- Formato -->
        <HBox spacing="10">
            <Label text="Formato:" style="-fx-text-fill: #bbbbbb; -fx-font-size: 14px;" />
            <Label fx:id="formatLabel" text="INFO" style="-fx-text-fill: white; -fx-font-size: 14px;" />
        </HBox>

        <!-- Proveedor -->
        <HBox spacing="10">
            <Label text="Proveedor:" style="-fx-text-fill: #bbbbbb; -fx-font-size: 14px;" />
            <Label fx:id="providerLabel" text="INFO" style="-fx-text-fill: white; -fx-font-size: 14px;" />
        </HBox>

        <!-- Género -->
        <HBox spacing="10">
            <Label text="Género:" style="-fx-text-fill: #bbbbbb; -fx-font-size: 14px;" />
            <Label fx:id="genreLabel" text="INFO" style="-fx-text-fill: white; -fx-font-size: 14px;" />
        </HBox>

        <!-- Stock -->
        <HBox spacing="10">
            <Label text="Stock:" style="-fx-text-fill: #bbbbbb; -fx-font-size: 14px;" />
            <Label fx:id="stockLabel" text="INFO" style="-fx-text-fill: white; -fx-font-size: 14px;" />
        </HBox>

        <!-- Precio -->
        <HBox spacing="10">
            <Label text="Precio:" style="-fx-text-fill: #bbbbbb; -fx-font-size: 14px;" />
            <Label fx:id="priceLabel" text="INFO" style="-fx-text-fill: #00ff88; -fx-font-size: 16px; -fx-font-weight: bold;" />
        </HBox>

        <!-- Botones en la parte inferior -->
        <HBox spacing="15" layoutX="20" layoutY="370">
            <Button fx:id="favoriteButton"
                    text="Favoritos"
                    style="-fx-background-color: #444444; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;" />

            <Button fx:id="buyButton"
                    text="Compra"
                    style="-fx-background-color: #00aaee; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;" />

            <Button fx:id="rentButton"
                    text="Alquiler"
                    visible="false"
                    style="-fx-background-color: #ffaa00; -fx-text-fill: black; -fx-font-size: 14px; -fx-background-radius: 8;" />
        </HBox>
    </VBox>

    <!-- Imagen del póster a la derecha -->
    <ImageView fx:id="posterImage"
               fitWidth="220" fitHeight="300"
               layoutX="420" layoutY="40"
               preserveRatio="true"
               style="-fx-effect: dropshadow(gaussian, black, 15, 0.6, 0, 0);" />

</AnchorPane>
