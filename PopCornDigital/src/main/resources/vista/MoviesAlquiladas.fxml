<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="root" prefHeight="312.0" prefWidth="213.0" style="-fx-background-color: #f4f4f4; -fx-border-color: #ccc; -fx-border-radius: 5; -fx-background-radius: 5;" stylesheets="@../css/Compra.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vista.MovieAlquileresControlador">

    <!-- Imagen de la película -->
    <ImageView fx:id="imagenPelicula" fitHeight="144.0" fitWidth="203.0" layoutX="8.0" layoutY="10" preserveRatio="true" />

    <!-- Título -->
    <Label fx:id="tituloLabel" layoutX="8.0" layoutY="180.0" style="-fx-font-weight: bold;" text="Pulp Fiction" />

    <!-- Compra ID -->
    <Label fx:id="alquilerIdLabel" layoutX="8.0" layoutY="154.0" text="Alquiler #1764232952045" />

    <!-- Cantidad -->
    <Label fx:id="tiempoLabel" layoutX="32.0" layoutY="230.0" text="Tiempo restante:    0 dias" />

    <!-- Proveedor -->
    <Label fx:id="proveedorLabel" layoutX="32.0" layoutY="245.0" text="Proveedor:         General" />

    <!-- Fecha de compra -->
    <Label fx:id="fechaInicioLabel" layoutX="31.0" layoutY="262.0" text="Inicio:             27/11/2025" />

    <!-- Fecha esperada -->
    <Label fx:id="fechaFinLabel" layoutX="32.0" layoutY="278.0" text="Fin:                 4/12/2025" />

    <Button fx:id="btnConfirmar" layoutX="8.0" layoutY="198.0" onAction="#confirmarAlquiler" prefHeight="23.0" prefWidth="90.0" style="-fx-background-color: #EFB000; -fx-font-weight: bold;" text="Confirmar" />
   <Button fx:id="btnCancelar" layoutX="107.0" layoutY="198.0" onAction="#cancelarAlquiler" prefHeight="23.0" prefWidth="90.0" style="-fx-background-color: #EFB000; -fx-font-weight: bold;" text="Cancelar" />

</AnchorPane>
