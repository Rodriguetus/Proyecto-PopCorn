<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="root" prefHeight="300.0" prefWidth="200.0" style="-fx-background-color: #f4f4f4; -fx-border-color: #ccc; -fx-border-radius: 5; -fx-background-radius: 5;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vista.CompraControlador">

    <!-- Imagen de la película -->
    <ImageView fx:id="imagenPelicula" fitHeight="144.0" fitWidth="186.0" layoutX="8.0" layoutY="10" preserveRatio="true" />

    <!-- Título -->
    <Label fx:id="tituloLabel" layoutX="8.0" layoutY="180.0" style="-fx-font-weight: bold;" text="Pulp Fiction" />

    <!-- Compra ID -->
    <Label fx:id="compraIdLabel" layoutX="8.0" layoutY="154.0" text="Compra #1764232952045" />

    <!-- Cantidad -->
    <Label fx:id="cantidadLabel" layoutX="10.0" layoutY="205.0" text="Cantidad:           1 unidad" />

    <!-- Proveedor -->
    <Label fx:id="proveedorLabel" layoutX="10.0" layoutY="220.0" text="Proveedor:         General" />

    <!-- Fecha de compra -->
    <Label fx:id="fechaCompraLabel" layoutX="9.0" layoutY="237.0" text="Compra:             27/11/2025" />

    <!-- Fecha esperada -->
    <Label fx:id="fechaEsperadaLabel" layoutX="10.0" layoutY="253.0" text="Entrega:             4/12/2025" />

    <!-- Estado -->
    <Label fx:id="estadoLabel" layoutX="10.0" layoutY="268.0" prefHeight="18.0" prefWidth="149.0" style="-fx-text-fill: orange;" text="Estado:               En tránsito" />

    <Button fx:id="btnRemove" layoutX="94.0" layoutY="176.0" prefHeight="18.0" prefWidth="100.0" text="Cancelar compra" />

</AnchorPane>
