<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="root" prefHeight="312.0" prefWidth="213.0" styleClass="card-pane" style="-fx-background-color: #f4f4f4; -fx-border-color: #ccc; -fx-border-radius: 5; -fx-background-radius: 5;" stylesheets="@../css/compra.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vista.CompraControlador">

    <!-- Imagen de la película -->
    <ImageView fx:id="imagenPelicula" fitHeight="144.0" fitWidth="203.0" layoutX="8.0" layoutY="10" styleClass="image-container" preserveRatio="true" />

    <!-- Título -->
    <Label fx:id="tituloLabel" layoutX="8.0" layoutY="170.0" styleClass="lbl-titulo" style="-fx-font-weight: bold;" text="Pulp Fiction" />

    <!-- Compra ID -->
    <Label fx:id="compraIdLabel" layoutX="8.0" layoutY="154.0" text="Compra #1764232952045" />

    <!-- Cantidad -->
    <Label fx:id="cantidadLabel" layoutX="32.0" layoutY="230.0" text="Cantidad:           1 unidad" />

    <!-- Proveedor -->
    <Label fx:id="proveedorLabel" layoutX="32.0" layoutY="245.0" text="Proveedor:         General" />

    <!-- Fecha de compra -->
    <Label fx:id="fechaCompraLabel" layoutX="31.0" layoutY="262.0" text="Compra:             27/11/2025" />

    <!-- Fecha esperada -->
    <Label fx:id="fechaEsperadaLabel" layoutX="32.0" layoutY="278.0" text="Entrega Esperada:             4/12/2025" />

    <!-- Estado -->
    <Label fx:id="estadoLabel" layoutX="32.0" layoutY="293.0" styleClass="lbl-estado-pendiente" prefHeight="18.0" prefWidth="149.0" style="-fx-text-fill: orange;" text="Estado:               Pendiente" />

    <Button fx:id="btnRemove" layoutX="115.0" layoutY="198.0" prefHeight="18.0" styleClass="btn-cancelar" prefWidth="100.0" text="Cancelar compra" />

    <Button fx:id="btnConfirmar" layoutX="8.0" layoutY="198.0" onAction="#confirmarCompra" prefHeight="18.0" styleClass="btn-confirmar"   prefWidth="100.0" text="Confirmar compra" />

</AnchorPane>
