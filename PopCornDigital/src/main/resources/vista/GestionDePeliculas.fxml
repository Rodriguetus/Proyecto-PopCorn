<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="650" prefWidth="1121.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vista.GestionDePeliculasControlador">

    <top>
        <HBox alignment="CENTER_RIGHT" spacing="15" style="-fx-background-color: #2c3e50; -fx-padding: 10;">
            <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Pestaña De Administrador" textFill="white" />
            <Button fx:id="btnVolver" onAction="#volverMenu" style="-fx-background-color: #EFB000; -fx-text-fill: black; -fx-font-weight: bold;" text="Administrar Pedidos" />
            <Button fx:id="btnCerrar" onAction="#CerrarSesion" style="-fx-background-color: #EFB000; -fx-text-fill: black; -fx-font-weight: bold;" text="Cerrar Sesión" />
        </HBox>
    </top>

    <center>
        <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #D6D6D6;">

            <GridPane hgap="10" vgap="10">

                <Label text="Nombre:" GridPane.rowIndex="1" />
                <TextField fx:id="txtNombre" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Año:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                <TextField fx:id="txtAno" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                <Label text="Precio:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                <TextField fx:id="txtPrecio" GridPane.columnIndex="3" GridPane.rowIndex="2" />

                <Label text="Stock:" GridPane.rowIndex="2" />
                <TextField fx:id="txtStock" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Formato:" GridPane.rowIndex="3" />
                <ComboBox fx:id="cmbFormato" prefWidth="150" promptText="Selecciona formato" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Proveedor:" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                <TextField fx:id="txtProveedor" GridPane.columnIndex="3" GridPane.rowIndex="3" />

                <Label text="Género:" GridPane.rowIndex="4" />
                <TextField fx:id="txtGenero" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Label text="Portada:" GridPane.columnIndex="2" GridPane.rowIndex="4" />
                <TextField fx:id="txtImagen" GridPane.columnIndex="3" GridPane.rowIndex="4" />

                <Label text="Descripción:" GridPane.columnIndex="4" GridPane.rowIndex="1" />
                <TextField fx:id="txtDescripcion" GridPane.columnIndex="5" GridPane.rowIndex="1" />

                <Button fx:id="btnAnadir" onAction="#anadirPelicula" style="-fx-background-color: #4F6078;" text="Añadir Película" textFill="WHITE" GridPane.columnIndex="6" GridPane.rowIndex="4" />

                <Button fx:id="btnEditar" onAction="#editarPelicula" style="-fx-background-color: #4F6078;" text="Editar Película" textFill="WHITE" GridPane.columnIndex="7" GridPane.rowIndex="4" />

                <Button fx:id="btnQuitar" onAction="#quitarPelicula" style="-fx-background-color: #4F6078;" text="Quitar Película" textFill="WHITE" GridPane.columnIndex="8" GridPane.rowIndex="4" />
            <columnConstraints>
               <ColumnConstraints />
               <ColumnConstraints />
               <ColumnConstraints />
               <ColumnConstraints />
               <ColumnConstraints />
               <ColumnConstraints />
               <ColumnConstraints />
               <ColumnConstraints />
               <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>

            </GridPane>

            <TableView fx:id="tablaPeliculas" prefHeight="350">
                <columns>
                    <TableColumn fx:id="colNombre" text="Película" />
                    <TableColumn fx:id="colAno" text="Año" />
                    <TableColumn fx:id="colPrecio" text="Precio" />
                    <TableColumn fx:id="colStock" text="Stock" />
                    <TableColumn fx:id="colGenero" text="Género" />
                    <TableColumn fx:id="colFormato" text="Formato" />
                    <TableColumn fx:id="colProveedor" text="Proveedor" />
                    <TableColumn fx:id="colImagen" text="Imagen" />
                    <TableColumn fx:id="colDescripcion" text="Descripción" />
                </columns>
            </TableView>

        </VBox>
    </center>
</BorderPane>
