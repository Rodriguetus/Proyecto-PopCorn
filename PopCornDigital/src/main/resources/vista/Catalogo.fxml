<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="506.0" prefWidth="922.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="vista.CatalogoControlador">

    <!-- Barra lateral izquierda -->
    <left>
        <VBox alignment="TOP_CENTER" prefWidth="80" spacing="20" style="-fx-background-color: #2c3e50;">
            <Button fx:id="homeButton" styleClass="icon-button" />
            <Button fx:id="searchButton" styleClass="icon-button" />
            <Button fx:id="favoritesButton" styleClass="icon-button" />
            <Button fx:id="settingsButton" styleClass="icon-button" />
        </VBox>
    </left>

    <!-- Centro con scroll de películas -->
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
            <VBox alignment="TOP_CENTER" spacing="30" style="-fx-padding: 20;">

                <!-- Sección de películas estilo Netflix -->
                <Label styleClass="section-title" text="Populares" />
                <FlowPane fx:id="popularMoviesPane" hgap="15" prefWrapLength="800" vgap="15" />

                <Label styleClass="section-title" text="Novedades" />
                <FlowPane fx:id="newMoviesPane" hgap="15" prefWrapLength="800" vgap="15" />

                <Label styleClass="section-title" text="Recomendadas" />
                <FlowPane fx:id="recommendedMoviesPane" hgap="15" prefWrapLength="800" vgap="15" />

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
