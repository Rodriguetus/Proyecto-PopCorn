<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="650" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vista.GestionDeAlquilerControlador">

    <top>
        <HBox alignment="CENTER_RIGHT" spacing="15" style="-fx-background-color: #2c3e50; -fx-padding: 10;">
            <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Admin" textFill="white" />
            <Button fx:id="btnVolver" onAction="#volverMenu" style="-fx-background-color: #EFB000; -fx-text-fill: black; -fx-font-weight: bold;" text="⬅ Volver" />
            <Button fx:id="btnCerrar" onAction="#CerrarSesion" style="-fx-background-color: #EFB000; -fx-text-fill: black; -fx-font-weight: bold;" text="Cerrar Sesión" />
        </HBox>
    </top>

    <center>
        <VBox prefHeight="605.0" prefWidth="1111.0" spacing="15" style="-fx-padding: 20; -fx-background-color: #D6D6D6;">
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="btnAnadir" onAction="#anadirAlquiler" style="-fx-background-color: #4F6078; -fx-text-fill: white;" text="Añadir Alquiler" />
                <Button fx:id="btnEditar" onAction="#editarAlquiler" style="-fx-background-color: #4F6078; -fx-text-fill: white;" text="Editar Alquiler" />
                <Button fx:id="btnQuitar" onAction="#quitarAlquiler" style="-fx-background-color: #4F6078; -fx-text-fill: white;" text="Quitar Alquiler" />
            </HBox>

            <GridPane hgap="10" vgap="10">
                <children>

                    <Label text="Fecha Alquiler(y-m-d):" />
                    <TextField fx:id="txtFechaAlquiler" GridPane.columnIndex="1" />

                    <Label text="Fecha Devolución(y-m-d):" GridPane.columnIndex="2" />
                    <TextField fx:id="txtFechaDevolucion" GridPane.columnIndex="3" />

                    <Label text="ID Película:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                    <TextField fx:id="txtPelicula" GridPane.columnIndex="3" GridPane.rowIndex="1" />
               <TextField fx:id="txtUsuario" layoutX="137.0" layoutY="81.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               <Label layoutX="10.0" layoutY="85.0" text="ID Usuario:" GridPane.rowIndex="1" />

                </children>
            <columnConstraints>
               <ColumnConstraints />
               <ColumnConstraints />
               <ColumnConstraints />
               <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
            </GridPane>

            <TableView fx:id="tablaAlquiler" prefHeight="350" prefWidth="839.0">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="105.66665840148926" text="ID Alquiler" />
               <TableColumn fx:id="colIdUsuario" prefWidth="127.0000228881836" text="ID Usuario" />
                    <TableColumn fx:id="colFechaAlquiler" prefWidth="158.33335876464844" text="Fecha Alquiler" />
                    <TableColumn fx:id="colFechaDevolucion" prefWidth="198.66665649414062" text="Fecha Devolución" />
                    <TableColumn fx:id="colIdPelicula" prefWidth="169.99993896484375" text="ID Película" />
                </columns>
            </TableView>

        </VBox>
    </center>
</BorderPane>
