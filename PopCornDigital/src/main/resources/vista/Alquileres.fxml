<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="425.0" prefWidth="922.0"
            stylesheets="@../css/pedido.css"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="vista.AlquileresControlador">

    <children>

        <!-- BARRA LATERAL -->
            <VBox alignment="TOP_CENTER" prefWidth="100" spacing="25" style="-fx-background-color: #2c3e50; -fx-padding: 20 0 20 0;">
                <ImageView fx:id="logoImage" fitHeight="70" fitWidth="70" preserveRatio="true" style="-fx-cursor: hand;">
                    <image>
                        <Image url="@../Imagenes/PopCorn.png" />
                    </image>
                </ImageView>
                <ImageView fx:id="homeIcon" fitHeight="42.0" fitWidth="60.0" onMouseClicked="#irCatalogo" preserveRatio="true" style="-fx-cursor: hand;">
                    <image>
                        <Image url="@../Imagenes/Catalogo.png" />
                    </image>
                </ImageView>
                <ImageView fx:id="searchIcon" fitHeight="42.0" fitWidth="60.0" onMouseClicked="#irPedido" preserveRatio="true" style="-fx-cursor: hand;">
                    <image>
                        <Image url="@../Imagenes/Envio.png" />
                    </image>
                </ImageView>
                <ImageView fx:id="favoritesIcon" fitHeight="42.0" fitWidth="60.0" onMouseClicked="#irFavoritos" preserveRatio="true" style="-fx-cursor: hand;">
                    <image>
                        <Image url="@../Imagenes/estrella.png" />
                    </image>
                </ImageView>
                <ImageView fx:id="AlquilerIcon" fitHeight="45.0" fitWidth="46.0" preserveRatio="true" style="-fx-cursor: hand;">
                    <image>
                        <Image url="@../Imagenes/alquileres.png" />
                    </image>
                </ImageView>
                <ImageView fx:id="SaldoIcon" fitHeight="42.0" fitWidth="60.0" layoutX="40.0" layoutY="312.0" onMouseClicked="#irSaldo" preserveRatio="true" style="-fx-cursor: hand;">
                    <image>
                        <Image url="@../Imagenes/Cartera.png" />
                    </image>
                </ImageView>
                <ImageView fx:id="exitIcon" fitHeight="43.0" fitWidth="48.0" onMouseClicked="#CerrarSesion" preserveRatio="true" style="-fx-cursor: hand;">
                    <image>
                        <Image url="@../Imagenes/CerrarSesion.png" />
                    </image>
                </ImageView>
            </VBox>


        <!-- LOGO SUPERIOR -->
        <ImageView fitHeight="51.0" fitWidth="46.0"
                   layoutX="146.0" layoutY="31.0"
                   preserveRatio="true">
            <image>
                <Image url="@../Imagenes/PopCorn.png"/>
            </image>
        </ImageView>

        <!-- TÍTULO -->
        <Label layoutX="206.0" layoutY="37.0"
               prefHeight="38.0" prefWidth="397.0"
               text="Gestión de Alquileres">
            <font>
                <Font size="26.0"/>
            </font>
        </Label>

        <!-- SUBTÍTULO -->
        <Label layoutX="115.0" layoutY="109.0"
               prefHeight="38.0" prefWidth="397.0"
               text="Tus Alquileres">
            <font>
                <Font size="21.0"/>
            </font>
        </Label>

        <!-- CONTENEDOR ALQUILERES -->
        <FlowPane fx:id="AlquilerPane"
                  layoutX="103.0"
                  layoutY="148.0"
                  prefHeight="370.0"
                  prefWidth="821.0"
                  hgap="15"
                  vgap="15"/>

    </children>
</AnchorPane>

