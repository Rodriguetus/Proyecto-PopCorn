<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane
        xmlns="http://javafx.com/javafx/24.0.1"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="vista.AlquileresControlador"
        stylesheets="@../css/pedido.css">

    <!-- ================= BARRA LATERAL ================= -->
    <left>
        <VBox alignment="TOP_CENTER"
              spacing="25"
              prefWidth="100"
              style="-fx-background-color: #2c3e50; -fx-padding: 20 0 20 0;">

            <ImageView fx:id="logoImage" fitHeight="70" fitWidth="70" preserveRatio="true" style="-fx-cursor: hand;"> <image> <Image url="@../Imagenes/PopCorn.png" /> </image> </ImageView>
            <ImageView fx:id="homeIcon" fitHeight="42.0" fitWidth="60.0" onMouseClicked="#irCatalogo" preserveRatio="true" style="-fx-cursor: hand;"> <image> <Image url="@../Imagenes/Catalogo.png" /> </image> </ImageView>
            <ImageView fx:id="searchIcon" fitHeight="42.0" fitWidth="60.0" onMouseClicked="#irPedido" preserveRatio="true" style="-fx-cursor: hand;"> <image> <Image url="@../Imagenes/Envio.png" /> </image> </ImageView>
            <ImageView fx:id="favoritesIcon" fitHeight="42.0" fitWidth="60.0" onMouseClicked="#irFavoritos" preserveRatio="true" style="-fx-cursor: hand;"> <image> <Image url="@../Imagenes/estrella.png" /> </image> </ImageView>
            <ImageView fx:id="AlquilerIcon" fitHeight="45.0" fitWidth="46.0" preserveRatio="true" style="-fx-cursor: hand;"> <image> <Image url="@../Imagenes/alquileres.png" /> </image> </ImageView>
            <ImageView fx:id="SaldoIcon" fitHeight="42.0" fitWidth="60.0" layoutX="40.0" layoutY="312.0" onMouseClicked="#irSaldo" preserveRatio="true" style="-fx-cursor: hand;"> <image> <Image url="@../Imagenes/Cartera.png" /> </image> </ImageView>
            <ImageView fx:id="settingsIcon" fitHeight="43.0" fitWidth="48.0" onMouseClicked="#CerrarSesion" preserveRatio="true" style="-fx-cursor: hand;"> <image> <Image url="@../Imagenes/CerrarSesion.png" /> </image> </ImageView>
        </VBox>
    </left>

    <!-- ================= CONTENIDO CENTRAL ================= -->
    <center>
        <VBox spacing="20" style="-fx-padding: 30;">

            <!-- CABECERA -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <ImageView fitHeight="45" fitWidth="45" preserveRatio="true">
                    <image>
                        <Image url="@../Imagenes/PopCorn.png"/>
                    </image>
                </ImageView>

                <Label text="GestiÃ³n de Alquileres">
                    <font>
                        <Font size="26"/>
                    </font>
                </Label>
            </HBox>

            <Label text="Tus Alquileres">
                <font>
                    <Font size="21"/>
                </font>
            </Label>

            <!-- ===== SCROLLPANE ===== -->
            <ScrollPane fitToWidth="true"
                        vbarPolicy="AS_NEEDED"
                        hbarPolicy="NEVER">

                <content>
                    <FlowPane fx:id="AlquilerPane"
                              hgap="15"
                              vgap="15"
                              prefWrapLength="800"/>
                </content>

            </ScrollPane>

        </VBox>
    </center>

</BorderPane>
