<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" stylesheets="@../css/saldo.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vista.SaldoControlador">

    <children>
        <VBox alignment="TOP_CENTER" prefWidth="100.0" spacing="25.0" styleClass="sidebar" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <ImageView fitHeight="70.0" fitWidth="70.0" preserveRatio="true">
                    <image>
                        <Image url="@../Imagenes/PopCorn.png" />
                    </image>
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
                </ImageView>

                <ImageView fitHeight="42.0" fitWidth="60.0" onMouseClicked="#irCatalogo" preserveRatio="true" styleClass="sidebar-icon">
                    <image>
                        <Image url="@../Imagenes/Catalogo.png" />
                    </image>
                </ImageView>

                <ImageView fitHeight="42.0" fitWidth="60.0" onMouseClicked="#irPedido" preserveRatio="true" styleClass="sidebar-icon">
                    <image>
                        <Image url="@../Imagenes/Envio.png" />
                    </image>
                </ImageView>

                <ImageView fitHeight="42.0" fitWidth="60.0" onMouseClicked="#irFavoritos" preserveRatio="true" styleClass="sidebar-icon">
                    <image>
                        <Image url="@../Imagenes/estrella.png" />
                    </image>
                </ImageView>

                <ImageView fitHeight="42.0" fitWidth="60.0" onMouseClicked="#irAlquileres" preserveRatio="true" styleClass="sidebar-icon">
                    <image>
                        <Image url="@../Imagenes/alquileres.png" />
                    </image>
                </ImageView>

                <ImageView fitHeight="42.0" fitWidth="60.0" preserveRatio="true" styleClass="sidebar-icon-active">
                    <image>
                        <Image url="@../Imagenes/Cartera.png" />
                    </image>
                </ImageView>

                <ImageView fitHeight="42.0" fitWidth="60.0" onMouseClicked="#volverLogin" preserveRatio="true" styleClass="sidebar-icon">
                    <image>
                        <Image url="@../Imagenes/exit.png" />
                    </image>
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
                </ImageView>
            </children>
        </VBox>

        <VBox alignment="CENTER" layoutX="100.0" spacing="30.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>

                <Label styleClass="titulo-vista" text="Mi Cartera Digital" />

                <VBox maxWidth="500.0" spacing="15.0" styleClass="tarjeta-saldo">
                    <children>
                        <HBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Label styleClass="texto-etiqueta" text="Usuario:" />
                                <Label fx:id="labelCorreo" styleClass="texto-valor-usuario" text="usuario@email.com" />
                            </children>
                        </HBox>

                        <Label styleClass="texto-etiqueta" text="Saldo Disponible" />

                        <Label fx:id="labelSaldo" styleClass="texto-saldo-grande" text="0.00 â‚¬" />
                    </children>
                </VBox>

                <Button fx:id="btnIncorporarSaldo" mnemonicParsing="false" onAction="#incorporarSaldo" styleClass="btn-accion" text="Incorporar Saldo" />
            </children>
        </VBox>
    </children>
</AnchorPane>
